        "modules-center": [
            "clock"
        ],
        "modules-right": [
            "idle_inhibitor",
            "pulseaudio",
            "network",
            "bluetooth",
            "battery",
            "temperature",
            "memory",
            "disk#root",
            "disk#home",
            "load",
            "niri/language",
            "tray",
