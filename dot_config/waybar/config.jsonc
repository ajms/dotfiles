// TIP: to get all install instructions for this config use
// grep -E "^// " $HOME/.config/waybar/config.jsonc
//
// To install all packages by once:
// sudo pacman -Syu --needed $(grep -Po '(?<=^\/\/ Install ).*' config | grep -v AUR)
// or with AUR packages
// paru -Syu --needed $(grep -Po '(?<=^\/\/ Install ).*' config | sed 's|(AUR)||g')
[
    {
        // Install otf-font-awesome ttf-font-logos(AUR)
        //"layer": "top", // Waybar at top layer
        "position": "top", // Waybar position (top|bottom|left|right)
        "height": 25, // Waybar height (to be removed for auto height)
        "fixed-center": true,
        // "width": 1280, // Waybar width
        "spacing": 0, // Gaps between modules (4px)
        // Choose the order of the modules
        "modules-left": [
            "niri/workspaces"
        ],
        "modules-center": [
            "clock"
        ],
        "modules-right": [
            "idle_inhibitor",
            "custom/network",
            "pulseaudio",
            "bluetooth",
            "battery",
            "temperature",
            "custom/memory",
            "custom/disk-root",
            "custom/disk-home",
            "load",
            "niri/language",
            "tray",
            "custom/shutdown"
        ],
        // Modules configuration
        "niri/workspaces": {
            "format": "{icon} {name}",
            "format-icons": {
                "active": "<big>ÔåÉ</big>",
                "default": "<small>ÔÑë</small>"
            }
        },
        "clock": {
            "format": "{:%a %d %b %H:%M}",
            "format-alt": "Week {:%V of the %Y}",
            "tooltip-format": "<tt><small>{calendar}</small></tt>",
            "calendar": {
                "mode": "month",
                "mode-mon-col": 3,
                "weeks-pos": "left",
                "on-scroll": 1,
                "on-click-right": "mode",
                "format": {
                    "months": "<span color='#ffead3'><b>{}</b></span>",
                    "days": "<span color='#ecc6d9'><b>{}</b></span>",
                    "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                    "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                    "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            },
            "actions": {
                "on-click-right": "mode",
                "on-click-forward": "tz_up",
                "on-click-backward": "tz_down",
                "on-click-middle": "shift_reset",
                "on-scroll-up": "shift_up",
                "on-scroll-down": "shift_down"
            }
        },
        "load": {
            "format": "{load1} ÔÇÖ",
            "on-click": "kgx -e htop"
        },
        "custom/memory": {
            "exec": "~/.config/waybar/scripts/memory.sh",
            "return-type": "json",
            "interval": 5,
            "on-click": "kgx -e htop"
        },
        "temperature": {
            "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon",
            "input-filename": "temp1_input",
            "critical-threshold": 80,
            "format-critical": "ÔÅ±  {temperatureC}¬∞C {icon}",
            "format": "{temperatureC}¬∞C {icon}",
            "format-icons": [
                "Ôãã",
                "Ôãâ",
                "Ôãá"
            ],
            "tooltip": false
        },
        // Install brightnessctl libnotify
        "battery": {
            "states": {
                "warning": 30,
                "critical": 10
            },
            "tooltip-format": "Charge: {capacity}%\nHealth: {health}%",
            "format": "{capacity}% {icon}",
            "format-charging": "{capacity}% Ôóß",
            "format-plugged": "{capacity}% Ôá¶",
            "format-alt": "{time} {icon}",
            "on-scroll-up": "brightnessctl -c backlight set +1; notify-send -c system 'ÔÜÖ Brightness: '$(brightnessctl -m | cut -d',' -f4) ",
            "on-scroll-down": "brightnessctl -c backlight set 1-; notify-send -c system 'ÔÜÖ Brightness: '$(brightnessctl -m | cut -d',' -f4) ",
            // "format-good": "", // An empty format will hide the module
            // "format-full": "",
            "format-icons": [
                "ÔâÑ",
                "ÔâÉ",
                "ÔâÇ",
                "ÔâÅ",
                "ÔâÄ"
            ]
        },
        // Install blueman pulseaudio-bluetooth
        // and https://wiki.archlinux.org/title/Bluetooth#Enabling_experimental_features
        "bluetooth": {
            "format": " Ôäî ",
            "format-alt": " Ôäî ",
            "format-connected": " {device_alias} Ôäî ",
            "format-connected-battery": " {device_alias} {device_battery_percentage}% Ôäî ",
            "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
            "on-click-right": "blueberry"
        },
        // Install iwd fuzzel polkit
        "custom/network": {
            "exec": "~/.config/waybar/scripts/network.sh",
            "return-type": "json",
            "interval": 2,
            "on-click-right": "nm-connection-editor"
        },
        "custom/shutdown": {
            "format": "‚èª",
            "tooltip": "Shutdown",
            "on-click": "shutdown now"
        },
        "tray": {
            "spacing": 3
        },
        // Install pavucontrol pipewire-media-session pulseaudio pulseaudio-alsa
        "pulseaudio": {
            "scroll-step": 5, // %, can be a float
            "tooltip-format": "{volume}%",
            "format": "{icon} ", //"{format_source}",
            "format-bluetooth": "{icon}Ôäî{format_source}",
            "format-bluetooth-muted": "Ôö© {icon}Ôäî{format_source}",
            "format-muted": "Ôö© {format_source}",
            "format-source": "{volume}%ÔÑ∞",
            "format-source-muted": "", // "ÔÑ±",
            "format-icons": {
                "headphone": "ÔÄ•",
                "hands-free": "Ôñê",
                "headset": "Ôñê",
                "phone": "ÔÇï",
                "portable": "ÔÇï",
                "car": "ÔÜπ",
                "default": [
                    "ÔÄ¶",
                    "ÔÄß",
                    "ÔÄ®"
                ]
            },
            "on-click": "pavucontrol",
            "on-click-middle": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
        },
        "idle_inhibitor": {
            "format": "{icon} ",
            "tooltip": true,
            "format-icons": {
                "activated": "ÔÅÆ",
                "deactivated": "ÔÅ∞"
            }
        },
        "niri/language": {
            "format": "{}",
            "on-click": "niri msg action switch-layout next",
            "format-en": "üá¨üáß",
            "format-de": "üá©üá™",
            "format-da": "üá©üá∞",
            "format-gr": "üá¨üá∑",
            "min-length": 2
        },
        "custom/disk-root": {
            "exec": "~/.config/waybar/scripts/disk.sh / /",
            "return-type": "json",
            "interval": 30
        },
        "custom/disk-home": {
            "exec": "~/.config/waybar/scripts/disk.sh /home /home",
            "return-type": "json",
            "interval": 30
        }
    }
]
